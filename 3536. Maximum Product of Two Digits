int maxProduct(int n) {

    int digit[10];
    int idx=0;

    while(n>0)
    {
        digit[idx++] = n % 10;
        n /= 10;
    }

    int maxproduct = 0;

    for(int i=0;i<idx;i++)
    {
        for(int j=i+1;j<idx;j++)
        {
            int product = digit[i] * digit[j];
            if(product > maxproduct)
            {
                maxproduct = product;
            }
        }
    }

    return maxproduct;
}
