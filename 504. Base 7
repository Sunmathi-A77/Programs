char* convertToBase7(int num) {

    char* result = (char*)malloc(20);

    if(num==0)
    {
        result[0]='0';
        result[1]='\0';
        return result;
    }
    
    int isnegative = num < 0;

    if(isnegative)
    {
        num=-num;
    }
    
    int index=0;

    while(num>0)
    {
        result[index++]=num % 7 + '0';
        num/=7;
    }

    if(isnegative)
    {
        result[index++]='-';
    }

    result[index]='\0';

    for(int i=0,j=index-1;i<j;i++,j--)
    {
        char temp=result[i];
        result[i]=result[j];
        result[j]=temp;
    }

    return result;
}
