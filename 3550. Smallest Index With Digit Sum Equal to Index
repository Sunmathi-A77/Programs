int digitSum(int n) {

    int sum = 0;
    while (n > 0) 
    {
        sum += n % 10;
        n /= 10;
    }
    return sum;
}

int smallestIndex(int* nums, int numsSize) {

    for (int i = 0; i < numsSize; i++) 
    {
        if (digitSum(nums[i]) == i) 
        {
            return i;
        }
    }
    return -1;
}
