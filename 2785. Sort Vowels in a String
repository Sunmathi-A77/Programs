#include <string.h>
#include <stdlib.h>
#include <stdbool.h>

bool isVowel(char c) {
    return c=='a' || c=='e' || c=='i' || c=='o' || c=='u' ||
           c=='A' || c=='E' || c=='I' || c=='O' || c=='U';
}

int cmp(const void *a, const void *b) {
    return (*(char*)a - *(char*)b);  // compare by ASCII
}

char* sortVowels(char* s) {
    int n = strlen(s);

    // Step 1: collect vowels
    char *vowels = (char*)malloc(n * sizeof(char));
    int vCount = 0;
    for (int i = 0; i < n; i++) {
        if (isVowel(s[i])) {
            vowels[vCount++] = s[i];
        }
    }

    // Step 2: sort vowels
    qsort(vowels, vCount, sizeof(char), cmp);

    // Step 3: replace vowels in sorted order
    int idx = 0;
    for (int i = 0; i < n; i++) {
        if (isVowel(s[i])) {
            s[i] = vowels[idx++];
        }
    }

    free(vowels);
    return s;  // return the modified string
}
