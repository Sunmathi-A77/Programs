void countDigits(int n, int count[10]) {

    for (int i = 0; i < 10; i++)
    {
        count[i] = 0;
    } 

    while (n > 0) 
    {
        count[n % 10]++;
        n /= 10;
    }
}

bool reorderedPowerOf2(int n) {

    int countN[10];
    countDigits(n, countN);

    for (int i = 0; i < 31; i++) 
    {
        int power = 1 << i;
        int countPower[10];
        countDigits(power, countPower);

        bool match = true;
        for (int j = 0; j < 10; j++) 
        {
            if (countN[j] != countPower[j]) 
            {
                match = false;
                break;
            }
        }

        if (match) return true;
    }

    return false;
}
