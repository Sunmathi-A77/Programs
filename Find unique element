class Solution {
    public int findUnique(int k, int[] arr) {
        
        Arrays.sort(arr);
        
        for(int i=0;i<arr.length;i+=k)
        {
            if(i+k>arr.length || arr[i]!=arr[i+k-1])
            {
                return arr[i];
            }
        }
        
        return -1;
    }
}
