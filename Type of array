int maxNtype(int arr[], int n) {
    
    int inc = 0, dec = 0;

    for (int i = 0; i < n - 1; ++i) 
    {
        if (arr[i] < arr[i + 1]) 
        {
            inc++;
        }
        else if (arr[i] > arr[i + 1])
        { 
            dec++;
        }
    }

    if (dec == 0) return 1;

    if (inc == 0) return 2;

    if (inc == 1 && arr[n - 1] > arr[0]) return 3;

    if (dec == 1 && arr[n - 1] < arr[0]) return 4;

    return -1;
}

