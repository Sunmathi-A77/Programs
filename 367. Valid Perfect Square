bool isPerfectSquare(int num) {

    if(num < 2)
    {
        return true;
    }

    for(long i=2;i*i<=num;i++)          //for(long i=2;i<=num/2;i++)
    {
        if(i*i==num)
        {
            return true;
        }
    }

    return false;
}
