#User function Template for python3

class Solution:
    def shortestUnorderedSubarray(self, arr):
        
        n = len(arr)
        
        is_inc = True
        for i in range(1, n):
            if arr[i] <= arr[i - 1]:
                is_inc = False
                break
        
        is_dec = True
        for i in range(1, n):
            if arr[i] >= arr[i - 1]:
                is_dec = False
                break
        
        if is_inc or is_dec:
            return 0
        
        return 3
