class Solution:
    def calculateFriendliness(self, arr):
        
        n = len(arr)
        friendliness = 0
        
        for i in range(n - 1):
            friendliness += abs(arr[i] - arr[i + 1])
        
        friendliness += abs(arr[n - 1] - arr[0])
        
        return friendliness
