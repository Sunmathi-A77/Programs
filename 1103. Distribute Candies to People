int* distributeCandies(int candies, int num_people, int* returnSize) 
{
    int* result = (int*)calloc(num_people, sizeof(int));
    *returnSize=num_people;

    int give=1;
    int i=0;

    while(candies > 0)
    {
        int idx = i % num_people;
        int give_now = (candies >= give) ? give : candies;
        result[idx] += give_now;
        candies -= give_now;
        give++;
        i++;
    }

    return result;
}
