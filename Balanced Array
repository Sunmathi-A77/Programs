// User function Template for Java

class Solution {
    // Function to find the minimum value required to balance the array.
    public int minValueToBalance(List<Integer> arr) {
        
        int sumleft=0,sumright=0;
        int n=arr.size();
        int mid=n/2;
        
        for(int i=0;i<mid;i++)
        {
            sumleft+=arr.get(i);
        }
        
        for(int i=mid;i<n;i++)
        {
            sumright+=arr.get(i);
        }
        
        int minvalue=Math.abs(sumleft-sumright);
        
        return minvalue;
    }
}
