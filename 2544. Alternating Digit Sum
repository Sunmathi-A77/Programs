int alternateDigitSum(int n) {

    int temp = n, len = 0;
    while (temp > 0) 
    {
        len++;
        temp /= 10;
    }

    int sum = 0;
    int sign = 1;
    int digits[len];

    for (int i = len - 1; i >= 0; i--) 
    {
        digits[i] = n % 10;
        n /= 10;
    }

    for (int i = 0; i < len; i++) 
    {
        sum += sign * digits[i];
        sign = -sign;
    }

    return sum;
    
}
